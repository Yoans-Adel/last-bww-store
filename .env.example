# =============================================================================
# BWW Store - Unified Environment Configuration
# Merged from all source repositories
# =============================================================================

# Application Settings
NODE_ENV=development
FLASK_ENV=development
APP_NAME=BWW Store
APP_URL=http://localhost

# Database Configuration
# MongoDB
MONGO_USERNAME=bww_admin
MONGO_PASSWORD=your_secure_password_here
MONGODB_URI=mongodb://localhost:27017/bww_store

# PostgreSQL (if needed for some services)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=bww_store
POSTGRES_USER=bww_admin
POSTGRES_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# JWT & Security
JWT_SECRET_KEY=your_jwt_secret_key_change_this_in_production
SECRET_KEY=your_flask_secret_key_change_this_in_production

# API Configuration
# Python Backend
PYTHON_API_PORT=5000
PYTHON_API_URL=http://localhost:5000

# Node.js Backend
NODE_API_PORT=3000
NODE_API_URL=http://localhost:3000

# Frontend
REACT_APP_API_URL=http://localhost:5000/api
VITE_API_URL=http://localhost:5000/api

# Social Media Integration
# Facebook
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_PAGE_ACCESS_TOKEN=your_facebook_page_access_token
FACEBOOK_VERIFY_TOKEN=your_facebook_webhook_verify_token

# WhatsApp Business API
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_whatsapp_verify_token

# Twilio (for SMS and WhatsApp)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# AI & NLP Services
# OpenAI (if used)
OPENAI_API_KEY=your_openai_api_key

# Google Cloud (for Speech-to-Text and Translation)
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# Hugging Face (for Arabic NLP models)
HUGGINGFACE_API_KEY=your_huggingface_api_key
CHATBOT_MODEL=aubmindlab/bert-base-arabertv2

# Analytics & Monitoring
# Google Analytics
GOOGLE_ANALYTICS_ID=your_google_analytics_id

# Mixpanel
MIXPANEL_TOKEN=your_mixpanel_token

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=noreply@bwwstore.com

# Payment Gateway (Egyptian market)
# Paymob
PAYMOB_API_KEY=your_paymob_api_key
PAYMOB_IFRAME_ID=your_paymob_iframe_id

# Fawry
FAWRY_MERCHANT_CODE=your_fawry_merchant_code
FAWRY_SECURITY_KEY=your_fawry_security_key

# Vodafone Cash
VODAFONE_CASH_MERCHANT_ID=your_vodafone_cash_merchant_id
VODAFONE_CASH_API_KEY=your_vodafone_cash_api_key

# Shipping Integration (Egyptian market)
# Bosta
BOSTA_API_KEY=your_bosta_api_key

# Aramex
ARAMEX_USERNAME=your_aramex_username
ARAMEX_PASSWORD=your_aramex_password
ARAMEX_ACCOUNT_NUMBER=your_aramex_account_number

# File Storage
# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-central-1
AWS_S3_BUCKET=bww-store-assets

# Cloudinary (alternative)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Localization
DEFAULT_LANGUAGE=ar
SUPPORTED_LANGUAGES=ar,en
TIMEZONE=Africa/Cairo

# Feature Flags
ENABLE_CHATBOT=true
ENABLE_VOICE_ASSISTANT=true
ENABLE_EGYPTIAN_DIALECT=true
ENABLE_PRODUCT_RECOMMENDATIONS=true
ENABLE_ORDER_TRACKING=true
ENABLE_ANALYTICS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Development/Debug
DEBUG=false
VERBOSE_LOGGING=false
